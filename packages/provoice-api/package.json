{
  "name": "provoice-api",
  "version": "1.2.2",
  "description": "Provoice RESTful APIs",
  "author": "Dynamic Flakes",
  "main": "src/server/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=8.9.4",
    "yarn": ">=1.6.0"
  },
  "scripts": {
    "precommit": "yarn lint",
    "prestart": "yarn docs",
"    start": "cross-env NODE_ENV=production pm2 start ./src/server/index.js",
    "dev": "nodemon --delay 250ms --exec NODE_ENV=development babel-node -- ./src/server/index.js",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text  mocha --timeout 20000 --recursive src/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/server/index.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:Dynamic-Flakes/provoice-web.git#master"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-cli": "^6.26.0",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "convict": "^4.3.2",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "dotenv-safe": "^6.0.0",
    "express": "^4.16.3",
    "express-validation": "^1.0.2",
    "helmet": "^3.13.0",
    "http-status": "^1.2.0",
    "joi": "^14.0.2",
    "jwt-simple": "0.5.5",
    "lodash": "^4.17.10",
    "method-override": "^3.0.0",
    "moment-timezone": "^0.5.21",
    "mongoose": "^5.2.5",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "4.0.0",
    "pm2": "^3.0.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "husky": "^1.1.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^13.1.0",
    "opn-cli": "^3.1.0",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.2.0",
    "supertest": "^3.1.0"
  }
}
